<p>
    <a class="btn btn-primary" href="@Url.Action("Guardar", "Oferta")"><i class="glyphicon glyphicon-plus"></i> Crear nueva Oferta</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Compania)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posicion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Compania)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posicion)
            </td>
            <td>

                <a class="btn btn-primary btn-xs" title=" Editar" href="@Url.Action("Edictar","Producto", new { id=item.Id})">
                    <i class=" glyphicon glyphicon-edit"></i>/a>
                    <a class="btn btn-info btn-xs" title="Detalles" href="@Url.Action("Detalles","Producto", new { id=item.Id})">
                        <i class=" glyphicon glyphicon-list"></i>/a>
                        <a class="btn btn-danger btn-xs" title="Eliminar" href="@Url.Action("Eliminar","Producto", new { id=item.Id})"><i class=" glyphicon glyphicon-trash"></i>/a>

            </td>
        </tr>

    }

</table>